<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:name=".core.JetDriveApp"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/jet_drive_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/jet_drive_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.JetDrive"
        tools:targetApi="31">
        <activity
            android:name=".core.ui.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.App.Starting">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <meta-data
            android:name="com.google.android.gms.client_id"
            android:value="@string/server_client_id" />
    </application>

</manifest>